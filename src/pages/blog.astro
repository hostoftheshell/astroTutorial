---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';
import '../styles/global.css';
type Post = {
  url: string;
  frontmatter: {
    title: string;
    [key: string]: any; // Other frontmatter fields
  };
};

const allPosts: Post[] = Object.values(
  import.meta.glob('./posts/*.md', { eager: true }) as Record<string, Post>
);
const pageTitle = "My Astro Learning Blog";
---

<BaseLayout pageTitle={pageTitle}>

        <p>This is where I will post about my journey learning Astro.</p>
        {allPosts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
</BaseLayout>
